{
    "name": "photon",
    "version": "0.1.0-beta",
    "main": "./public/electron/main.js",
    "license": "MIT",
    "private": true,
    "homepage": "./",
    "author": {
        "name": "Dock",
        "email": "contato.pedrinfx@gmail.com"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "dev": "concurrently -k \"cross-env BROWSER=none npm run start\" \"npm run electron:start\"",
        "electron:build": "npm run build && electron-builder -c.extraMetadata.main=build/electron/main.js",
        "electron:start": "wait-on http://localhost:3000 && electron .",
        "rebuild": "electron-rebuild",
        "postinstall": "electron-builder install-app-deps"
    },
    "dependencies": {
        "@electron/remote": "^2.0.1",
        "electron-is-dev": "^2.0.0",
        "electron-store": "^8.0.1",
        "fs-extra": "^10.0.0",
        "json-schema-typed": "^7.0.3",
        "node-pty": "^0.10.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-icons": "^4.3.1",
        "react-router-dom": "^6.0.2",
        "sass": "^1.43.5",
        "xterm": "^4.15.0",
        "xterm-addon-fit": "^0.5.0",
        "xterm-addon-web-links": "^0.4.0"
    },
    "devDependencies": {
        "@types/electron": "^1.6.10",
        "@types/node": "^16.11.10",
        "@types/react": "^17.0.37",
        "@types/react-dom": "^17.0.11",
        "@typescript-eslint/eslint-plugin": "^5.4.0",
        "@typescript-eslint/parser": "^5.4.0",
        "concurrently": "^6.4.0",
        "cross-env": "^7.0.3",
        "electron": "^16.0.4",
        "electron-builder": "^22.14.5",
        "electron-rebuild": "^3.2.5",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.3",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-promise": "^5.1.1",
        "eslint-plugin-react": "^7.27.1",
        "eslint-plugin-react-hooks": "^4.3.0",
        "prettier": "^2.5.0",
        "react-scripts": "^4.0.3",
        "typescript": "^4.5.2",
        "wait-on": "^6.0.0"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "build": {
        "appId": "com.dock.photon",
        "productName": "Photon",
        "copyright": "Copyright Â© 2021 Dock",
        "files": [
            "build/**/*",
            "node_modules/**/*"
        ],
        "nsis": {
            "allowToChangeInstallationDirectory": true,
            "uninstallDisplayName": "Photon",
            "oneClick": false
        },
        "win": {
            "target": [
                "NSIS"
            ]
        },
        "directories": {
            "output": "release"
        }
    }
}
